@model List<Product>

@{
    ViewData["Title"] = "Test Database";
}

<div class="container">
    <h1>Products</h1>
    
    <form asp-action="AddRandomProduct" method="post" class="mb-4">
        <button type="submit" class="btn btn-primary">Add Random Product</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price kr</td>
                </tr>
            }
        </tbody>
    </table>
</div> 